class Solution {
    public int[] sortedSquares(int[] nums) {
        int n = nums.length;
        int[] result = new int[n];
        int Left = 0;
        int Right = n - 1;
        int pos = n - 1;
        while (Left <= Right) {
            int Leftsqure = nums[Left] * nums[Left];
            int Rightsqure = nums[Right] * nums[Right];
            if (Leftsqure > Rightsqure) {
                result[pos] = Leftsqure;
                Left++;
            } else {
                result[pos] = Rightsqure;
                Right--;
            }
            pos--;
        }
        return result;
    }
}
